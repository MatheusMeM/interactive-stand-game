# app/ui/screens.kv

<WelcomeScreen>:
    name: 'welcome'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: '[b]BRAND CHALLENGE[/b]' # Example Title
            font_size: '60sp'
            markup: True # Allows for bold tags
        Button:
            text: 'TOUCH TO START'
            font_size: '50sp'
            background_color: 0, 0.6, 0.2, 1 # A nice green color
            on_press: app.game_manager.show_instructions() # This will now work

<InstructionsScreen>:
    name: 'instructions'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Press the illuminated button as fast as you can!'
            font_size: '32sp'
            halign: 'center'
        Button:
            text: 'START GAME'
            font_size: '50sp'
            on_press: app.game_manager.start_game()

<AgilityGameScreen>:
    name: 'agility_game'
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            id: countdown_label
            text: 'Get Ready!'
            font_size: '80sp'
            size_hint_y: 0.8
        BoxLayout:
            size_hint_y: 0.2
            Label:
                id: round_label
                text: 'Round: 0 / 5'
                font_size: '30sp'
            Label:
                id: score_label
                text: 'Score: 0'
                font_size: '30sp'

<QuizGameScreen>:
    name: 'quiz_game'
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            id: question_label
            text: 'What is the answer to this question?'
            font_size: '32sp'
            size_hint_y: 0.4
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'
        GridLayout:
            cols: 2
            spacing: 15
            Button:
                id: option_1
                text: 'Option A'
                on_press: app.game_manager.check_answer(self.text)
            Button:
                id: option_2
                text: 'Option B'
                on_press: app.game_manager.check_answer(self.text)
            Button:
                id: option_3
                text: 'Option C'
                on_press: app.game_manager.check_answer(self.text)
            Button:
                id: option_4
                text: 'Option D'
                on_press: app.game_manager.check_answer(self.text)
        Label:
            id: feedback_label
            text: ''
            font_size: '25sp'
            size_hint_y: 0.15

<ScoreScreen>:
    name: 'score'
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            text: 'Congratulations!'
            font_size: '50sp'
        Label:
            id: final_score_label
            text: 'Your Final Score: 0'
            font_size: '40sp'
        TextInput:
            id: name_input
            hint_text: 'Enter Your Name (3 Chars)'
            multiline: False
            font_size: '35sp'
            size_hint_y: None
            height: '60dp'
            on_text: app.game_manager.validate_name_input(self)
        Button:
            text: 'Submit Score'
            font_size: '40sp'
            on_press: app.game_manager.submit_score(name_input.text)

<LeaderboardScreen>:
    name: 'leaderboard'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        Label:
            text: 'Hall of Fame'
            font_size: '50sp'
            size_hint_y: 0.2
        Label:
            id: congrats_label
            text: ''
            font_size: '30sp'
            size_hint_y: 0.1
            color: (0, 1, 0, 1)
        GridLayout:
            id: leaderboard_grid
            cols: 3
            size_hint_y: 0.6
        Button:
            text: 'Play Again'
            font_size: '40sp'
            size_hint_y: 0.1
            on_press: app.game_manager.return_to_welcome()
</content>
</file>
</files>