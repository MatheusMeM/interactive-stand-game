                    on_press: name_input.insert_text(self.text)
                    
                # Second row: A S D F G H J K L DEL
                Button:
                    text: 'A'
                    font_size: '30sp'
                    on_press: name_input.insert_text(self.text)
                Button:
                    text: 'S'
                    font_size: '30sp'
                    on_press: name_input.insert_text(self.text)
                Button:
                    text: 'D'
                    font_size: '30sp'
                    on_press: name_input.insert_text(self.text)
                Button:
                    text: 'F'
                    font_size: '30sp'
                    on_press: name_input.insert_text(self.text)
                Button:
                    text: 'G'
